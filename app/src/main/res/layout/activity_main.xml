<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:context="com.fdm.androidcountrypicker.Activities.MainActivity"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:gravity="center">


    <Button
        android:id="@+id/choose_country_bt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/main_activity_choose_contry_bt"
        />

    <TextView
        android:id="@+id/chosen_country_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No Country Selected"
        android:layout_below="@+id/choose_country_bt"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
